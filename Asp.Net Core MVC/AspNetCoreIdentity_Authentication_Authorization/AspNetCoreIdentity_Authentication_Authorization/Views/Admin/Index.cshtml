@model List<GetUserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row mt-3">
    <h3 class="display-3 text-center text-primary">List of Users</h3>
</div>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <table class="table table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count < 1)
                {
                    <p class="alert alert-danger text-center">Not exists user!</p>
                }
                else
                {
                    foreach (var user in Model)
                    {
                        <tr class="text-center">
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>

