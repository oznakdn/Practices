@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 text-center border-bottom pb-3">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Username"></label>
                <input type="text" class="form-control" placeholder="johndoe" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input type="password" class="form-control" placeholder="P@ssW0rd!" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3">
                <button class="btn btn-primary d-block" type="submit"><i class="fa-solid fa-right-to-bracket me-2"></i>Login</button>
            </div>
        </form>
    </div>
</div>