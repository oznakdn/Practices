@model List<DefaultCrud_AjaxCrud_ImageUpload.Models.UserViewModels.UserListViewModel>

<div class="row">
    <div class="col-12">
        <table class="table table-hover table-sm mt-4">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Created Date</th>
                    <th>Is Locked</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Id</td>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                        <td>@item.Username</td>
                        <td>@item.EmailAddress</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            @if (item.Locked)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>@item.Role</td>
                        <td>
                            <div class="text-end">

                                <a class="btn btn-warning btn-sm text-white" 
                                   asp-action="MemberUserEditPartial" 
                                   asp-route-id="@item.Id"
                                   data-bs-toggle="modal" data-bs-target="#modalEdit"
                                   data-ajax="true" 
                                   data-ajax-method="get"
                                   data-ajax-update="#modalEditContent"
                                   ><i class="fa fa-edit me-2"></i>Update</a>

                                <a class="btn btn-danger btn-sm" 
                                   asp-action="DeleteUser" 
                                   asp-route-id="@item.Id"
                                   data-ajax="true" 
                                   data-ajax-method="get" 
                                   data-ajax-update="#panel"
                                   data-ajax-confirm="Are you sure want to delete @item.Username ?"
                                   ><i class="fa fa-trash me-2"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
